            </select>
            <label for="fuel">Fuel</label>
            <select name="fuel" id="fuel" form="filterForm">
            </select>
            <label for="transmission">Transmission</label>
            <select name="transmission" id="transmission" form="filterForm">
            </select>
            <label for="location">Location</label>
            <select name="location" id="location" form="filterForm">
            </select>
            <button onclick="filter()">Filter</button>
        </div>

        <form id="selectedCar" action="" method="post">
            <label for="description">Description</label>
            <input type="text" name="description" id="rentInput0">
